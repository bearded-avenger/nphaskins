<div class="container post-container">

	<article>
		<header>
			<h2><%= @post.title %></h2>
			<p><time pubdate datetime="<%= @post.created_at %>"><%= time_ago_in_words(@post.created_at) %> ago</time></p>
		</header>
		<%= @post.content %>
		<br /><%= link_to 'Edit', edit_post_path(@post) if user_signed_in? %>
	</article>
</div>
<div class="bg-img"></div>