<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
   	<%= f.input :content, input_html: { class: 'editable' }, label:false %>
   	<%= f.input :excerpt %>
    <%= f.input :image_data, label:'Post Image', as: :string %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
